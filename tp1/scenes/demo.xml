<sxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="transformIceCream">
            <translate x="0" y="10" z="0"/>
            <rotate axis="x" angle="90"/>
        </transformation>

        <transformation id="transformationGround">
            <scale x="10" y="1" z="10"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>
        <primitive id="demoTriangle">
            <triangle x1="-1.5" y1="0" z1="-0.75" x2="0" y2="0" z2="1.25" x3="1.5" y3="0" z3="-0.75" />
        </primitive>
        <primitive id="demoCylinder">
            <cylinder base="2.5" top="0" height="10" slices="40" stacks="60"/>
        </primitive>
        <primitive id="demoSphere"> 
            <sphere  radius="2.35" slices="20" stacks="20"/>
        </primitive>
        <primitive id="sphere2"> 
            <sphere  radius="1.5" slices="20" stacks="20"/>
        </primitive>
        <primitive id="demoTorus">
            <torus inner="0.25" outer="2.5" slices="50" loops="50"/> 
        </primitive>
        
    </primitives>

    <components>
        <component id="iceCream">
            <transformation>
                <transformationref id="transformIceCream">
            </transformation>
            <materials>
                <material id="inherit">
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoTorus" />
                <primitiveref id="demoSphere" />
                <primitiveref id="demoCylinder"/>
            </children>
        </component>

        <component id="ground">
            <transformation>
                <transformationref id="transformationGround"/>
            </transformation>
            <materials>
                <material id="inherit">
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="iceBall2">
            <transformation>
                <translate x="0" y="11.5" z="0"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <primitiveref id="sphere2"/>
            </children>
        </component>

        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="iceCream" />
                <primitiveref id="demoTriangle"/>
                <componentref id="ground"/>
                <componentref id="iceBall2"/>
            </children>
        </component>
    </components>
</sxs>